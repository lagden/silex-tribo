{% extends 'layout.html.twig' %}

{% block content %}
<div class="wrapper grupo grupo-fazemos">
    <h2 class="titulo">{{ 'titulo_o_que_fazemos'|trans }}</h2>
    <div class="infografico">
        <img src="{{ app.request.basepath }}/images/banner-fazemos.png" alt="" />
    </div>

    {% if cases and cases.success %}
        <div class="especial-title-wrap">
            <h2 class="especial-title">Cases</h2>
        </div>

        <div class="packery" id="packeryCases">
            {% for case in cases.data %}
                {% set case = case|merge({ 'rotulo': case.nome, 'url': url('trabalho_show', { 'slug': case.slug }) }) %}
                {{ include('/includes/partials/box.html.twig', { "item": case, "css": 'box', "isFull": true }) }}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
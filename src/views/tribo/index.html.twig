{% extends 'layout.html.twig' %}

{% block content %}
<div class="wrapper grupo grupo-a-tribo">
    <article class="media">
        <div class="media__img--rev">
            <img src="{{ app.request.basepath }}/images/tmp/580x360.jpg">
        </div>
        <div class="media__body">
            <h2 class="titulo">{{ 'titulo_a_tribo'|trans }}</h2>
            {{ 'conteudo_a_tribo'|trans|raw }}

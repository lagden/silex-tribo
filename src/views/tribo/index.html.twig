    <hr class="rule gray">
    <div class="slogan">{{ 'slogan'|trans|raw }}</div>
    <hr class="rule gray">
    <article>
        <h2 class="titulo">{{ 'titulo_quem_somos'|trans }}</h2>
    </article>
</div>
{% endblock %}
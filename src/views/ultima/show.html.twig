{% extends 'layout.html.twig' %}

{% block content %}
<section class="wrapper grupo grupo-ultima">
    <h2 class="titulo g-d-18">{{ 'titulo_ultimas'|trans }}</h2>
    <div class="g-d-6 g-d-l text--right">
        {{ include('/includes/partials/btn-voltar.html.twig', { url: url('ultima')} ) }}
    </div>
    <article class="cf">
        {% set grid = 24 %}
        {% if galeria|length > 0 %}
            {% set grid = 12 %}
            <div class="g-d-{{ grid }}">
                <div class="flexslider galeria g-d-{{ grid }}" id="galeria-de-fotos">
                    <ul class="slides">
                        {% for item in galeria %}
                        <li>
                            <img src="{{ app.request.basepath }}/images/tmp/{{ item.image }}" alt="{{ dado.titulo }}">
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="flexslider thumbs g-d-{{ grid }}" id="galeria-de-fotos-thumbs">
                    <ul class="slides">
                        {% for item in galeria %}
                        <li class="item">
                            <i class="overlay"></i>
                            <img src="{{ app.request.basepath }}/images/tmp/{{ item.thumb }}" data-image="{{ app.request.basepath }}/images/tmp/{{ item.image }}" class="thumb" alt="thumb">
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
        <div class="g-d-{{ grid }} g-d-l conteudo">
            <h3>{{ dado.titulo }}</h3>
            {{ dado.conteudo|raw }}
        </div>
    </article>
</section>
{% endblock %}
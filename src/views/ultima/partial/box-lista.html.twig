<article class="media">
    {% if item.imagem %}
        <img src="{{ item.imagem }}" class="media__img" alt="{{ item.titulo }}">
    {% endif %}
    <div class="media__body">
        <h3>{{ item.titulo }}</h3>
        <p>{{ item.chamada }}</p>
        <a class="btn btn-info" href="{{ url('ultima_show', {slug: item.slug}) }}">
            <span>{{ 'continuar_lendo'|trans }}</span>
        </a>
    </div>
</article>

{% extends 'layout.html.twig' %}

{% block content %}
<section class="wrapper grupo grupo-ultima">
    <h2 class="titulo">{{ 'titulo_ultimas'|trans }}</h2>
    {% if destaques %}
        <div class="container-box">
            {% for destaque in destaques %}
                {% set destaque = destaque|merge({ 'rotulo': 'titulo_ultimas', 'url': url('ultima_show', { 'slug': destaque.slug }) }) %}
                {{ include('/includes/partials/box.html.twig', { "item": destaque, "css": 'box', "isFull": true }) }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="cf packery" id="ultimasLista">
        {% for item in items %}
            {{ include('/ultima/partial/box-lista.html.twig', { "item": item }  ) }}
        {% else %}
            {{ 'nenhum_registro'|trans }}
        {% endfor %}
    </div>
    {% if pagina < paginas %}
        <div id="page_nav" class="hidden">
            <a href="{{ url('ultima_pagina', { 'page': 2 }) }}" class="loadmore text--center"><i class="ir geral-refresh">Carrega mais</i></a>
        </div>
    {% endif %}
</section>
{% endblock %}